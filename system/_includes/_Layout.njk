<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <meta name="description" content="{{ pkg.description }}" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.min.css"
    />
    {% block head %}
    <title>{{ metadata.title }} | {{ metadata.description }}</title>
    <!-- custom stylesheets -->
    {% if stylesheets %} {% for style in stylesheets %}
    <link rel="stylesheet" href="{{ style }}" />
    {% endfor %} {% endif %} {% endblock %}
  </head>

  <body class="{{ title | slug }}">
    <!-- header -->
    <!-- header -->
    {% block header %}
    <!-- nav -->
    {% include "partials/nav.njk" %} {% endblock %}
    <!-- cover -->
    {% block cover %} {% endblock %}
    <!-- content -->
    {% block content %}
    {{ content | safe }}
    {% endblock %}

    <!-- footer -->
    {% block footer %} {% include "partials/footer.njk" %} {% endblock %}
    <!-- scripts - replaced jquery with vue -->
    <!-- scripts - replaced jquery with vue -->
    {% for js in metadata.scripts %}
    <script src="{{ js }}"></script>
    {% endfor %} {#% include "./partials/footer-scripts.html" %#} {% if scripts
    %} {% for script in scripts %}
    <script src="{{ script }}"></script>
    {% endfor %} {% endif %}
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.22.0/prism.min.js"></script>
  </body>
</html>
